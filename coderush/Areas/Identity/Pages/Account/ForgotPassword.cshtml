@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "ลืมรหัสผ่าน";
    Layout = null;
}


<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title> @ViewData["Title"] </title>
    <link rel="shortcut icon" href="~/assets/images/favicon.png" type="image/x-icon" />
    <!-- ================== APP CSS START ================== -->
    <link rel="stylesheet" href="~/assets/css/style.css" />
    <!-- ================== APP CSS END ================== -->
</head>
<body>
    <div class="auth-container d-flex align-items-center">
        <div class="col-lg-4 mx-auto">
            <h2 class="text-center mb-4">@ViewData["Title"]</h2>
            <div class="auth-form">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email" class="label">อีเมล์</label>
                        <div class="input-group">
                            <input asp-for="Input.Email" type="text" class="form-control" placeholder="ระบุอีเมล์ที่ลงทะเบียน">
                            <div class="input-group-append">
                                <span class="input-group-text">
                                    <i class="mdi mdi-check-circle-outline"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary submit-btn btn-block">ตกลง</button>
                    </div>
                    <div class="text-block text-center my-3">
                        <span class="text-small font-weight-500">กลับสู่หน้าเข้าระบบ ? </span>
                        <a asp-page="./Login" class="text-black text-small">Login</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

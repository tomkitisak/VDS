@model Employee
@{
    string controller = this.ViewContext.RouteData.Values["controller"].ToString();
    string action = this.ViewContext.RouteData.Values["action"].ToString();
    string modelName = "Employee";
    ViewData["Title"] = modelName + " Delete";
}

<!-- Content Start -->
<div class="content-wrapper">
    <!-- Heading Start -->
    <section class="heading">
        <h2 class="mb-2"><i class="mdi mdi-account-card-details"></i> @modelName</h2>
        <div class="titles">
            @await Html.PartialAsync(PartialView.StatusMessage, TempData[StaticString.StatusMessage])
        </div>
    </section><!-- Heading End -->
    <div class="row">
        <div class="col-12">
            <form asp-controller="@controller" asp-action="Submit@(action)" method="post">
                <article class="card mb-4">
                    <div class="card-header">
                        <h4 class="card-title mb-0">Delete @modelName? this process is irreversible</h4>
                    </div>
                </article>
                <article class="card mb-4">
                    <div class="card-header">
                        <h4 class="card-title mb-0">Basic Info</h4>
                    </div>
                    <div class="card-body">
                        <input type="hidden" asp-for="EmployeeId" />
                        <div class="row">
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="FirstName"></label>
                                    <div class="input-group">
                                        <input asp-for="FirstName" class="form-control" disabled />
                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                    </div>
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="LastName"></label>
                                    <div class="input-group">
                                        <input asp-for="LastName" class="form-control" disabled />
                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                    </div>
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="Gender"></label>
                                    <div class="input-group">
                                        <select asp-for="Gender" class="select2 form-control" asp-items="ViewBag.Gender" disabled></select>
                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                    </div>
                                    <span asp-validation-for="Gender" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        @*<div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <label asp-for="DateOfBirth"></label>
                                    <div class="input-group">
                                        <input type="text" id="DateOfBirth" name="DateOfBirth" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")" class="datepicker form-control" data-val="true" data-val-required="The DateOfBirth field is required." disabled>
                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                    </div>
                                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                </div>
                            </div>

                        </div>*@

                        <div class="row">

                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="Email"></label>
                                    <div class="input-group">
                                        <input asp-for="Email" class="form-control" disabled />
                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                    </div>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="Phone"></label>
                                    <div class="input-group">
                                        <input asp-for="Phone" class="form-control" disabled />
                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                    </div>
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Address1"></label>
                            <div class="input-group">
                                <input asp-for="Address1" class="form-control" disabled />
                                <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                            </div>
                            <span asp-validation-for="Address1" class="text-danger"></span>
                        </div>


                        <div class="row">
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="District"></label>
                                    <div class="input-group">
                                        <input asp-for="District" class="form-control" disabled />
                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                    </div>
                                    <span asp-validation-for="District" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="Province"></label>
                                    <div class="input-group">
                                        <input asp-for="Province" class="form-control" disabled />
                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                    </div>
                                    <span asp-validation-for="Province" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="ZipCode"></label>
                                    <div class="input-group">
                                        <input asp-for="ZipCode" class="form-control" disabled />
                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                    </div>
                                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                                </div>
                            </div>
                        </div>


                    </div>

                </article>

                <article class="card mb-4">
                    <div class="card-header">
                        <h4 class="card-title mb-0">Staff Info</h4>
                    </div>
                    <div class="card-body">
                        @*<div class="form-group">
                            <label asp-for="EmployeeIDNumber"></label>
                            <div class="input-group">
                                <input asp-for="EmployeeIDNumber" class="form-control" disabled />
                                <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                            </div>
                            <span asp-validation-for="EmployeeIDNumber" class="text-danger"></span>
                        </div>*@

                        <div class="row">
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="DesignationId"></label>
                                    <div class="input-group">
                                        <select asp-for="DesignationId" class="select2 form-control" asp-items="ViewBag.Designation" disabled></select>
                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                    </div>
                                    <span asp-validation-for="DesignationId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="DepartmentId"></label>
                                    <div class="input-group">
                                        <select asp-for="DepartmentId" class="select2 form-control" asp-items="ViewBag.Department" disabled></select>
                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                    </div>
                                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                                </div>
                            </div>

                        </div>



                    </div>


                </article>



                <article class="card mb-4">
                    <div class="card-header">
                        <h4 class="card-title mb-0">Bank Account Info</h4>
                    </div>
                    <div class="card-body">

                    </div>

                    </article>

                    <article class="card mb-4">
                        <div class="card-header">
                            <a href="/@controller/Index" class="btn btn-default">Back</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </article>
            </form>
        </div>
    </div>
</div>
<!-- Content End -->


@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDcEgUdgLmE5g-karJidmmZsYBkmo4NMCk"></script>

    <script>

        $.Thailand({
            database: '/jquery.Thailand.js/database/db.json', // path หรือ url ไปยัง database
            $district: $('#subdistrict'), // input ของตำบล
            $amphoe: $('#district'), // input ของอำเภอ
            $province: $('#province'), // input ของจังหวัด
            $zipcode: $('#zipcode') // input ของรหัสไปรษณีย์

        });

        $.Thailand({
            database: '/jquery.Thailand.js/database/db.json', // path หรือ url ไปยัง database
            $district: $('#subdistrict1'), // input ของตำบล
            $amphoe: $('#district1'), // input ของอำเภอ
            $province: $('#province1'), // input ของจังหวัด
            $zipcode: $('#zipcode1') // input ของรหัสไปรษณีย์

        });

        $.Thailand({
            database: '/jquery.Thailand.js/database/db.json', // path หรือ url ไปยัง database
            $district: $('#subdistrict2'), // input ของตำบล
            $amphoe: $('#district2'), // input ของอำเภอ
            $province: $('#province2'), // input ของจังหวัด
            $zipcode: $('#zipcode2') // input ของรหัสไปรษณีย์

        });

        $(document).ready(function () {


            $('#hospitalname').on('input', function (e) {

                $("#address").text($(this).val());

                document.getElementById("address").value = $(this).val();

            });
            myMap();
        });


        function myMap() {

            ConcatAddress();

            //Set the Latitude and Longitude of the Map
            var myAddress = new google.maps.LatLng(24.466807, 54.384297);

            var info = document.getElementById("address").value;


            //Create Options or set different Characteristics of Google Map
            var mapOptions = {
                center: myAddress,
                zoom: 15,
                minZoom: 5,
                mapTypeId: google.maps.MapTypeId.ROADMAP
            };

            //Display the Google map in the div control with the defined Options
            var map = new google.maps.Map(document.getElementById("myDiv"), mapOptions);

            var geocoder = new google.maps.Geocoder();



            geocodeAddress(geocoder, map);

        }

        function geocodeAddress(geocoder, resultsMap) {

            var address = document.getElementById('address').value;

            var contentString = '<div id="content">' + address +

                '</div>';

            var infowindow = new google.maps.InfoWindow({
                content: contentString
            });



            geocoder.geocode({ 'address': address }, function (results, status) {
                if (status === 'OK') {
                    resultsMap.setCenter(results[0].geometry.location);
                    var marker = new google.maps.Marker({
                        map: resultsMap,
                        position: results[0].geometry.location

                    });


                    infowindow.open(resultsMap, marker);
                    document.getElementById('lat').value = results[0].geometry.location.lat();
                    document.getElementById('long').value = results[0].geometry.location.lng();


                } else {
                    alert('Geocode was not successful for the following reason: ' + status);
                }
            });
        }


        function ConcatAddress() {


            var hospitalname = document.getElementById('hospitalname') ? document.getElementById('hospitalname').value.concat(" ") : "";
            var address1 = document.getElementById('address1') ? document.getElementById('address1').value.concat(" ") : "";
            var subdistrict = document.getElementById('subdistrict') ? document.getElementById('subdistrict').value.concat(" ") : "";
            var district = document.getElementById('district') ? document.getElementById('district').value.concat(" ") : "";
            var province = document.getElementById('province') ? document.getElementById('province').value.concat(" ") : "";
            var zipcode = document.getElementById('zipcode') ? document.getElementById('zipcode').value.concat(" ") : "";

            document.getElementById('address').value = hospitalname.concat(address1, subdistrict, district, province, zipcode);

        }




    </script>



    <script>
        const realFileBtn = document.getElementById("real-file");
        const customBtn = document.getElementById("custom-button");
        const customTxt = document.getElementById("custom-text");
        const myimage = document.getElementById("logoImage");

        customBtn.addEventListener("click", function () {
            realFileBtn.click();
        });

        realFileBtn.addEventListener("change", function () {
            if (realFileBtn.value) {
                customTxt.innerHTML = realFileBtn.value.match(
                    /[\/\\]([\w\d\s\.\-\(\)]+)$/
                )[1];

                myimage.src = window.URL.createObjectURL(this.files[0]);
            } else {
                customTxt.innerHTML = "-ชื่อไฟล์รูปภาพ-";
                myimage.src = "/assets/images/noimage.png";
            }
        });



    </script>

}


